 <div class="tag-search center container">
   <h1 class="text-lg-center"> Find your Adventure today</h1>
   <div class="row">

   <form class="form-group center" action='/parks/new'/>

     <div class="col-md-2 col-md-offset-4">
       <input type="text" name="zip" id="location" class="form-control" placeholder="Zipcode"/>
     </div>
    <div class="col-md-2">
      <select id="dynamic_select">
        <option value='#'>Select type</option>
        <option value="/parks/new?type=city">City</option>
        <option value="/parks/new?type=state">State</option>
        <option value="/parks/new?type=national">National</option>
      </select>
    </div>
  </form>
</div>
 </div>

<script>
    document.querySelector('#dynamic_select').addEventListener('change', function(){
      var zip = document.querySelector('#location').value;
      var url = this.value + "&zip=" + zip;
      if(url){
        window.location = url;
      }
    });
</script>
