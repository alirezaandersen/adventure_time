
<% @parks.each.with_index do |park,i| %>
  <% if i+1%3 == 0 %>
  <div class="row">
    <% end %>
    <div class="col-md-4">
      <div class="card text-center" style="max-width: 202px;">
        <!-- Heading -->

        <div class="card-block">
          <h4 class="card-title"><%= park.first %></h4>
          <h6 class="card-subtitle text-muted"><%= park.last[:address] %></h6>
        </div>
        <!-- Image -->
        <!-- <img src="/city_park_1.jpg" alt="Photo of sunset">
        <img src="/pix/samples/12s.jpg" alt="Photo of sunset"> -->
        <!-- Text Content -->
        <div class="card-block">
          <p class="card-text">Current Weather : <%= @parks_weather[park.first][:temp] %></p>

          <a href="#" class="btn btn-primary">Full Report</a>
        </div>
      </div>
    </div>
    <% if i%3 == 0 %>
  </div>
  <% end %>
<% end %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js" integrity="sha384-vZ2WRJMwsjRMW/8U7i6PWi6AlO1L79snBrmgiDpgIWJ82z8eA5lenwvxbMV1PAh7" crossorigin="anonymous"></script>
